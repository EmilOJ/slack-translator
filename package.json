{
  "name": "slack-translator-tests",
  "version": "1.0.8",
  "description": "Tests for Slack Translator Chrome Extension",
  "scripts": {
    "test": "jest --verbose",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "canvas": "^2.11.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "content.js"
    ]
  }
}
